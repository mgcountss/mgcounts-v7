<style>
    body {
        background-color: #242425;
        font-family: Arial, Helvetica, sans-serif;
        text-align: center;
        color: #FFF;
    }
    
    img {
        vertical-align: middle;
    }
    
    #nav {
        float: left;
        background-color: #000;
        position: relative;
        display: flex;
        width: 100%;
        padding-top: 0.2vw;
    }
    
    #nav>a>img {
        width: 15vw;
        height: 2.3vw;
    }
    
    #banner1, #banner2 {
        text-align: left;
        width: 100%;
        height: 11vw;
        background-color: #000;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
    }
    
    .round {
        margin-left: 1vw;
        margin-top: 0.3vw;
        width: 10vw;
        height: 10vw;
        border-radius: 50%;
        border: 0.3vw solid #fff;
        background-color: #000;
        float: left;
        object-fit: cover;
    }
    
    .rect {
        margin-left: 1vw;
        margin-top: 0.3vw;
        width: 15vw;
        height: 10vw;
        border: 0.3vw solid #fff;
        background-color: #000;
        float: left;
        object-fit: cover;
    }
    
    #main {
        margin: auto;
        margin-top: 3vw;
        width: 90%;
        background-color: #1a1a1a;
        display: grid;
        grid-template-columns: 1fr 1fr;
    }
    
    #main2 {
        margin: auto;
        margin-top: 0px;
        width: 90%;
        background-color: #1a1a1a;
        display: grid;
        grid-template-columns: 1fr 1fr;
    }
    
    #main3 {
        margin: auto;
        margin-top: 0px;
        width: 90%;
        background-color: #1a1a1a;
    }
    
    #name1, #name2 {
        font-size: 3vw;
        margin-top: 0vw;
        font-weight: bold;
    }
    
    #count1, #count2 {
        font-size: 6vw;
        margin-top: -2vw;
    }
    
    #label1, #label2 {
        font-size: 2vw;
        margin-top: -3vw;
    }

    .label {
        font-size: 3vw;
    }
    
    .label2 {
        font-size: 1vw;
    }
    
    #settings {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        border: solid 1px #FFF;
    }
    
    .setting_title {
        font-size: 2vw;
        font-weight: bold;
        margin-top: 0.5vw;
    }
    
    .setting_input {
        height: 2vw;
        width: 5vw;
    }
    
    .setting_input2 {
        width: 15vw;
        height: 2vw;
        font-size: 1vw;
    }
    
    .setting_input3 {
        font-size: 2.5vw;
    }
    
    .setting_input3:hover {
        cursor: pointer;
    }

    .gap {
        border: solid #FFF;
        width: 35%;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    #diff {
        font-size: 4vw;
        margin-top: 0vw;
    }

    #dtext {
        font-size: 1vw;
        margin-top: -2vw;
    }

    .chart {
        height: 20vw;
    }
    </style>